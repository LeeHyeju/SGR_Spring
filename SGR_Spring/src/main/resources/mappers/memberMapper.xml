<!-- 로그인 -->
<select id="login" resultType="MemberDto">
SELECT
	mb_id, mb_name,mb_grade
FROM member
WHERE mb_id = #{mb_id} and mb_pw = #{mb_pw} 
</select>

<!-- 회원가입 -->
<insert id="join">
INSERT INTO member (mb_id,mb_pw,mb_name,mb_sex,mb_bday,
mb_phone,mb_email,mb_zipcode,mb_address)
VALUES (#{mb_id},#{mb_pw},#{mb_name},#{mb_sex},#{mb_bday},
#{mb_phone},#{mb_email},#{mb_zipcode},#{mb_address})
</insert>

